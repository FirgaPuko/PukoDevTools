{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://firgapuko.github.io/PukoDevTools/was_tools/mod.json",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "模組的唯一標示符。"
        },
        "description": {
            "type": ["string", "null"],
            "description": "模組說明。"
        },
        "author": {
            "type": "string",
            "description": "作者或機構名稱。"
        },
        "was_version": {
            "type": "string",
            "pattern": "[0-9]+\\.[0-9]+\\.[0-9]+",
            "enum": ["1.0.0", "*"]
        }
    }
}